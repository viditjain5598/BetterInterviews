= simple_form_for @interview, html: { multiparts: true } do |f|
  - if @interview.errors.any?
    #errors
      %h2
      = pluralize(@interview.errors.count, "error")
      prevented this post from being saved
      %ul 
        - @interview.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.input :title, input_html: { class: 'form-control'} 
  .form-group
    = f.input :description, input_html: { class: 'form-control'}
  .form-group
    = f.input :scheduled_time, input_html: { class: 'form-control'}
  =f.button :submit, class: "btn btn-primary" 
